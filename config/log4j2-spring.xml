<?xml version="1.0" encoding="UTF-8"?>
<Configuration monitorInterval="60">
    <Properties>
        <Property name="log-path">/opt/packages/Oracle/BluespaceMailer/logs/</Property>
    </Properties>
    <Appenders>
        <Console name="Console-Appender" target="SYSTEM_OUT">
            <PatternLayout>
                <pattern>
                    [%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n
                </pattern>>
            </PatternLayout>
        </Console>
		<RollingFile name="ApplicationRollingFile" fileName="${log-path}/BluespaceMailer.log"
                 filePattern="logs/$${date:yyyy-MM}/BluespaceMailer-%d{yyyy-MM-dd-HH}-%i.log.gz">
			<PatternLayout>
				<Pattern>%d %p %c{10} [%t] %m%n</Pattern>
			</PatternLayout>
			<Policies>
				<TimeBasedTriggeringPolicy interval="6" modulate="true"/>
				<SizeBasedTriggeringPolicy size="250 MB"/>
			</Policies>
		</RollingFile>
		<RollingFile name="SpringRollingFile" fileName="${log-path}/Spring.log"
                 filePattern="logs/$${date:yyyy-MM}/Spring-%d{yyyy-MM-dd-HH}-%i.log.gz">
			<PatternLayout>
				<Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
			</PatternLayout>
			<Policies>
				<TimeBasedTriggeringPolicy interval="6" modulate="true"/>
				<SizeBasedTriggeringPolicy size="250 MB"/>
			</Policies>
		</RollingFile>
		<RollingFile name="HibernateRollingFile" fileName="${log-path}/Hibernate.log"
                 filePattern="logs/$${date:yyyy-MM}/Hibernate-%d{yyyy-MM-dd-HH}-%i.log.gz">
			<PatternLayout>
				<Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
			</PatternLayout>
			<Policies>
				<TimeBasedTriggeringPolicy interval="6" modulate="true"/>
				<SizeBasedTriggeringPolicy size="250 MB"/>
			</Policies>
		</RollingFile>
    </Appenders>
    <Loggers>
        <Logger name="org.springframework" level="info" additivity="false">
            <AppenderRef ref="SpringRollingFile"/>
            <AppenderRef ref="Console-Appender"/>
        </Logger>
        <Logger name="org.hibernate" level="info" additivity="false">
            <AppenderRef ref="HibernateRollingFile"/>
            <AppenderRef ref="Console-Appender"/>
        </Logger>
        <Logger name="com.bluespacetech" level="info" additivity="false">
            <AppenderRef ref="ApplicationRollingFile"/>
         </Logger>
        <Root level="error">
            <AppenderRef ref="Console-Appender"/>
        </Root>
    </Loggers>
</Configuration>